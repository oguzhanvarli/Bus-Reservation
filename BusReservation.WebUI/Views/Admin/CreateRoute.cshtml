@model Route

    <h5>Rota Yarat!</h5>
<hr />
<form  type="submit" asp-action="CreateRoute" asp-controller="Admin">
    <div class="row">
        <div class="col-md-5">
            <div class="form-group m-2">
                <label class="col-form-label">Kalkış Şehri*</label>
                <select class="form-select" aria-label="Kalkış Şehri Seçiniz" asp-for="RouteStart">
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
                <span asp-validation-for="RouteStart" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <label class="col-form-label">Rota 1. Durak</label>
                <select class="form-select"  asp-for="RouteFirstTransfer">
                    <option selected></option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
            </div>
            <div class="form-group m-2">
                <label class="col-form-label">Rota 2. Durak</label>
                <select class="form-select" asp-for="RouteSecondTransfer">
                    <option selected></option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
            </div>
            <div class="form-group m-2">
                <label class="col-form-label">Rota 3. Durak</label>
                <select class="form-select" asp-for="RouteThirdTransfer">
                    <option selected></option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
            </div>
            <div class="form-group m-2">
                <label class="col-form-label">Rota 4. Durak</label>
                <select class="form-select" asp-for="RouteFourthTransfer">
                    <option selected></option>
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
            </div>
            <div class="form-group m-2">
                <label class="col-form-label">Rota Bitiş*</label>
                <select class="form-select" asp-for="RouteFinish">
                    @foreach (var city in ViewBag.Cities)
                    {
                        <option value="@city.CityName">@city.CityName</option>
                    }
                </select>
                <span asp-validation-for="RouteFinish" class="text-danger"></span>
            </div>



        </div>
        <div class="col-md-5">
            <div class="mt-3">
                <div class="form-group m-2 row">
                    <label class="col-form-label col-md-4">Rota Tarihi:</label>
                    <input type="date" asp-for="RouteDate" class="col-md-8"/>
                    <span asp-validation-for="RouteDate" class="text-danger"></span>
                </div>
                <div class="form-group m-2 row">
                    <label class="col-form-label col-md-4">Rota Kalkış Saati:</label>
                    <input type="time" asp-for="RouteClock" class="col-md-8"/>
                    <span asp-validation-for="RouteClock" class="text-danger"></span>
                </div>
                <div class="form-group m-2 row">
                    <label class="col-form-label col-md-4">Rota Fiyatı:</label>
                       <input type="text" asp-for="RoutePrice" class="col-md-8" />
                        <span asp-validation-for="RoutePrice" class="text-danger"></span>
                    
                </div>
            </div>
        </div>
        
    </div>
    <button class="btn btn-outline-primary" type="submit">Kaydet</button>
</form>
<p>* Seçilmesi Zorunludur.</p>