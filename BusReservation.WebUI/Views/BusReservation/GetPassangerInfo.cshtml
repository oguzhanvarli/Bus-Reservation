@model Ticket

<center>
    <div class="card">
        <h5 class="card-header">@Model.TicketFromWhere - @Model.TicketToWhere</h5>
        <center>
            <div class="card-body col-md-6 center">
                <form type="submit" class="row gy-2 gx-3 align-items-center my-4 d-flex justify-content-around row" asp-controller="BusReservation" asp-action="CreateTicket">
                    <input type="hidden" asp-for="TicketId">
                    <input type="hidden" asp-for="RouteId" />
                    <input type="hidden" asp-for="TicketFromWhere" />
                    <input type="hidden" asp-for="TicketToWhere" />
                    <input type="hidden" asp-for="TicketSeatNo" />
                    <input type="hidden" asp-for="TicketClock" />
                    <input type="hidden" asp-for="TicketDate" />
                    <input type="hidden" asp-for="TicketPrice" />
                    <input type="hidden" asp-for="TicketPnrNo" />

                    <div class="form-group row mb-3">
                        <label class="col-form-label col-md-4 d-inline">Adınız:</label>
                        <input type="text" class="col-md-8" placeholder="Adınızı Giriniz." asp-for="TicketName">
                        <span asp-validation-for="TicketName" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-form-label col-md-4 d-inline">Soyadınız:</label>
                        <input type="text" class="col-md-8" placeholder="Soyadınızı Giriniz." asp-for="TicketSurname">
                        <span asp-validation-for="TicketSurname" class="text-danger"></span>
                    </div>
                    <div class="form-group row mb-3">
                        <label class="col-form-label col-md-4 d-inline">Mail:</label>
                        <input type="email" class="col-md-8" placeholder="Mail Adresinizi Giriniz." asp-for="TicketMail">
                        <span asp-validation-for="TicketMail" class="text-danger"></span>
                    </div>

                    <div class="row mb-3">
                        <label class="col-form-label col-md-4 d-inline">Cinsiyetiniz:</label>
                        <select class="form-selec col-md-8" asp-for="TicketGender">
                            <option value="Kadın">Kadın</option>
                            <option value="Erkek">Erkek</option>
                        </select>
                    </div>

                    <div class="col-md-6">
                        <button type="submit" class="btn btn-primary offset-md-2">Koltuğu Rezerve Et!</button>
                    </div>
                </form>
            </div>
        </center>
    </div>

</center>